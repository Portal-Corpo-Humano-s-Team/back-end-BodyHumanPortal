<mjml>
   <mj-head>
   <mj-font name="Tilt Warp"
       href="https://fonts.googleapis.com/css2?family=Tilt+Warp" />

       <mj-font name="Tilt Warp-neon" href="https://fonts.googleapis.com/css2?family=Tilt+Neon" />
